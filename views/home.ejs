            <button id="createReq" onclick="createRoom()">Create Room</button>
            <button id="back" onclick="back('create')">Back</button>
        </div>
        <div id="joinRoom">
            <center>
                <h1 id="heading">Join Room</h1>
            </center>
            <label>Room Name</label>
            <input id="roomName" placeholder="Enter the room name" type="text">
            <p id="paraTag">Please fill this field</p>
