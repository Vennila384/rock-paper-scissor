            <!-- <input id="name" placeholder="Enter your name" type="text"/> -->
            <button id="joinReq" onclick="joinRoom()">Join Room</button>
            <button id="backButton" onclick="back('join')">Back</button>
        </div> 
        <div id="gamePage">
            <div id="header">
                <div id="gameName">
                    <img id="nameImage" src="./images/logo.svg">
                </div>
                <div id="scoreDiv">
                    <div id="score">
                        <p>SCORE</p>
                    </div>
                    <div id="scoreNumber">
                        0
                    </div>
                </div>
            </div>
            <div id="details">
                <div id="images">
                    <div id="rock">
                        <img src="./images/icon-rock.svg" class="image" onclick="calculateResult('rock')" alt="rock">
                    </div>
                    <div id="paper">
                        <img src="./images/icon-paper.svg" class="image" onclick="calculateResult('paper')" alt="paper">
                    </div>
                    <div id="scissor">
                        <img src="./images/icon-scissors.svg" class="image" onclick="calculateResult('scissors')" alt="scissor">
                    </div>
                </div>
                <div id="playerDetail">
                    <div class="show">
                        <p class="players">You Picked</p>
                        <div id="player1">
                            <img id="image1" alt="Waiting for oponent">
                        </div>
                    </div>
                    <div class="show">
                        <p class="players">House Picked</p>
                        <div id="player2">
                            <img id="image2" alt="Waiting for oponent">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <script src="/socket.io/socket.io.js"></script>
        <script src="script.js"></script>
    </body>
</html>
